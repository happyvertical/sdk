{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "../packages/ai/src/**/*",
    "../packages/files/src/**/*",
    "../packages/pdf/src/**/*",
    "../packages/spider/src/**/*",
    "../packages/sql/src/**/*",
    "../packages/utils/src/**/*",
    "../packages/ocr/src/**/*",
    "../packages/smrt/src/**/*"
  ],
  "exclude": [
    "src/**/*",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**",
    "**/build/**"
  ]
}
