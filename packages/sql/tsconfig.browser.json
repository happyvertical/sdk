{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/browser.ts", "src/shared/**/*"],
  "exclude": ["src/node/**/*", "**/*.test.ts", "**/*.spec.ts"]
}