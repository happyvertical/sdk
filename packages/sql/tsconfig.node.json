{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler", 
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/node.ts", "src/shared/**/*", "src/index.ts", "src/sqlite.ts", "src/postgres.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}