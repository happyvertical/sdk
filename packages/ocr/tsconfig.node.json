{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node", "bun"]
  },
  "include": [
    "src/shared/**/*",
    "src/node/**/*",
    "src/index.ts",
    "src/node.ts"
  ],
  "exclude": [
    "src/browser/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}