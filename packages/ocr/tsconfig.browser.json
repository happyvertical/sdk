{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2022",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src/shared/**/*",
    "src/browser/**/*",
    "src/index.ts",
    "src/browser.ts"
  ]
}