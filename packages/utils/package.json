{
  "name": "@have/utils",
  "version": "0.0.50",
  "description": "Context-aware utility functions and type definitions",
  "type": "module",
  "main": "dist/node.js",
  "browser": "dist/browser.js",
  "types": "dist/shared/types.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/browser.js",
      "node": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./browser": "./dist/browser.js",
    "./node": "./dist/node.js"
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "bun run build:browser && bun run build:node",
    "build:browser": "tsc -p tsconfig.browser.json",
    "build:node": "tsc -p tsconfig.node.json",
    "build:watch": "bun run build:browser --watch & bun run build:node --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "bun run build:watch & bun run test:watch"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "date-fns": "^3.3.1",
    "pluralize": "^8.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/pluralize": "^0.0.33",
    "@types/uuid": "^10.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ]
}
