{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo-browser",
    "lib": ["ES2023", "DOM"],
    "types": [],
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/browser/**/*",
    "src/browser.ts",
    "src/shared/types.ts",
    "src/shared/base.ts",
    "src/index.ts"
  ],
  "exclude": [
    "src/node/**/*",
    "src/node.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}