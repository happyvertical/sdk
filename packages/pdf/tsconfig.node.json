{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["node", "bun"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/shared/**/*",
    "src/node/**/*",
    "src/node.ts",
    "src/index.ts"
  ],
  "exclude": [
    "src/browser/**/*",
    "src/browser.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}