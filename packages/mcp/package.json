{
  "name": "@have/mcp",
  "version": "0.0.50",
  "description": "MCP server for SMRT framework development - provides tools and resources for building AI-powered TypeScript applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "smrt-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "bun run build:watch & bun run test:watch",
    "start": "node dist/index.js",
    "inspect": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@have/smrt": "workspace:*",
    "@have/ai": "workspace:*",
    "@have/utils": "workspace:*",
    "@have/files": "workspace:*",
    "@have/sql": "workspace:*",
    "@have/pdf": "workspace:*",
    "@have/spider": "workspace:*",
    "@have/ocr": "workspace:*",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "vitest": "^3.2.4",
    "typescript": "^5.7.3"
  }
}
