{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noPrototypeBuiltins": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "include": [
      "packages/**/*.{ts,tsx,js,jsx,json}",
      "*.{ts,tsx,js,jsx,json}",
      ".claude/**/*.{ts,tsx,js,jsx,json,md}",
      ".devcontainer/**/*.{json,yml,yaml}",
      ".github/**/*.{json,yml,yaml}"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.svelte-kit/**",
      "**/build/**",
      "**/dist/**"
    ]
  }
}
