  console.log('  DELETE /api/v1/categories/:id - Delete category');
  console.log('');
  console.log(` Try: curl http://localhost:${port}/api/v1/products`);
});

// Graceful shutdown
process.on('SIGINT', () => {
  console.log('\n Shutting down server...');
  server.close(() => {
    process.exit(0);
  });
