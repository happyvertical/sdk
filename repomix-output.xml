    # Set a version update strategy
    versioning-strategy: increase
    # Specify package manager
    package-manager: "pnpm"
    # Groups to reduce PR noise
    groups:
      # Group all dev dependencies together
      dev-dependencies:
        patterns:
          - "@biomejs/*"
