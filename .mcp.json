{
  "mcpServers": {
    "mcp-svelte-docs": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-svelte-docs"
      ],
      "env": {}
    },
    "shadcn-ui": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "shadcn-mcp",
        "--framework",
        "svelte"
      ],
      "env": {
        "FRAMEWORK": "svelte"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "@playwright/mcp"
      ],
      "env": {
        "PLAYWRIGHT_MCP_ISOLATED": "true"
      }
    }
  }
}