{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "packages/*/dist/**/*",
    "packages/**/node_modules",
    "packages/**/*.spec.ts",
    "packages/**/*.test.ts"
  ]
}
