{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@have/*": ["packages/*/src"],
      "*": ["node_modules/*"]
    },
    "lib": ["ES2020", "dom"]
  },
  "exclude": ["node_modules", "**/dist"]
}
