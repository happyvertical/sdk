{
  "name": "HAVE SDK Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",

  "containerEnv": {
    "NODE_ENV": "development",
    "FORCE_COLOR": "1",
    "PATH": "/home/node/.bun/bin:/root/.bun/bin:/usr/local/share/nvm/current/bin:/usr/local/share/npm-global/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/home/node/.local/bin",
    "SQLOO_HOST": "db",
    "SQLOO_USER": "postgres",
    "SQLOO_PASSWORD": "postgres",
    "SQLOO_DATABASE": "testdb",
    "SQLOO_PORT": "5432"
  },

  "initializeCommand": [
    "bash",
    "-c",
    "echo 'Initializing HAVE SDK development environment with ONNX Runtime support...'"
  ],

  "onCreateCommand": [
    "bash",
    "-c",
    "export PATH=\"$HOME/.bun/bin:$PATH\" && git lfs install"
  ],

  "postCreateCommand": [
    "bash",
    "-c", 
    "export PATH=\"$HOME/.bun/bin:$PATH\" && bun install && bun run build"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "biomejs.biome",
        "vitest.explorer",
        "ms-ossdata.vscode-postgresql"
      ],
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.git": true,
          "**/.DS_Store": true,
          "**/Thumbs.db": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/coverage": true
        },
        "postgresqlConnection": {
          "host": "db",
          "user": "postgres",
          "password": "postgres",
          "database": "testdb",
          "port": 5432
        }
      }
    }
  },

  "forwardPorts": [3000, 5173, 8080, 65432],

  "remoteUser": "node",

  "workspaceFolder": "/workspaces/sdk",

  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/scripts,target=/workspaces/sdk/.devcontainer/scripts,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude,target=/home/node/.claude,type=bind,consistency=cached"
  ]
}